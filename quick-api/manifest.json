{
    "manifest_version": 3,
    "name": "Quick API",
    "description": "Open extension API reference",
    "version": "1.0",
    "icons": {
        "16": "images/hi_16.png",
        "128": "images/icon-128.png"
    },
    "background": {
        "service_worker": "service-worker.js",
        "type": "module"
    },
    "permissions": ["storage", "alarms"],
    "host_permissions": ["https://developer.chrome.com/docs/devtools/tips/*"],
    "minimum_chrome_version": "102",
    "omnibox": {
        "keyword": "api"
    },
    "content_scripts": [
        {
            "matches": ["https://developer.chrome.com/docs/extensions/reference/*"],
            "js": ["scripts/content.js"]
    }]
}